@model RestuarantReservationSystem.Models.Reservation
@{

}
<div class="container pt-5">
    
        <h3 class="text-center">Update Reservation</h3>
        <div class="mx-auto w-75">
          
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id"/>
                <div class="form-group my-2">
                    <label asp-for="Name">Customer Name *</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

               
                <div class="form-group my-2">
                    <label asp-for="DateCreated">Reservation Date:</label>
                    <input type="date" class="form-control" asp-for="DateCreated">
                <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>

                <div class="form-group my-2">
                    <button type="submit" class="btn btn-warning">Update Reservation</button>

                </div>
               </form>
        </div>
    
</div>